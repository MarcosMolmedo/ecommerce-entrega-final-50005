const nodemailer = require('nodemailer');

async function sendProductDeletedEmail(email, productName) {
    // Configurar nodemailer y enviar el correo electrónico
    const transporter = nodemailer.createTransport({
        // Configuración del transporte
    });

    const mailOptions = {
        from: 'tu-email@dominio.com',
        to: email,
        subject: 'Producto eliminado',
        text: `Tu producto ${productName} ha sido eliminado.`
    };

    await transporter.sendMail(mailOptions);
}

module.exports = {
    sendProductDeletedEmail
};
